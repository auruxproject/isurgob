# Configuración de entorno para ISURGOB
# Copie este archivo como .env y configure los valores apropiados

# Configuración de la aplicación
APP_NAME="ISURGOB - Sistema de Administración Municipal"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE="America/Argentina/Buenos_Aires"

# Configuración de base de datos
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=isurgob
DB_USERNAME=webusr
DB_PASSWORD=test

# Configuración de seguridad
COOKIE_VALIDATION_KEY=your-secret-key-here
SESSION_TIMEOUT=3600
CSRF_TOKEN_NAME=_csrf-isurgob

# Configuración de correo electrónico
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM=noreply@municipalidad.gob.ar
MAIL_FROM_NAME="Sistema ISURGOB"

# Configuración del municipio
MUNI_NAME="Municipalidad de Trevelin"
MUNI_ADDRESS="Domicilio Municipal"
MUNI_PHONE="4223344/5"
MUNI_EMAIL="rentas@municipalidad.gob.ar"
MUNI_WEBSITE="https://www.municipalidad.gob.ar"
MUNI_CUIT=""
MUNI_LOGO="/images/logo_sam.gif"

# Configuración de administración
ADMIN_EMAIL="sistemas@aari.com.ar"
ADMIN_NAME="Administrador del Sistema"
ADMIN_PHONE=""

# Configuración de caché (Redis - opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Configuración de archivos
MAX_UPLOAD_SIZE=10M
UPLOAD_PATH=/uploads
TEMP_PATH=/tmp

# Configuración de logs
LOG_LEVEL=error
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION=30
BACKUP_PATH=/backups

# Configuración de mantenimiento
MAINTENANCE_ENABLED=false
MAINTENANCE_MESSAGE="El sistema se encuentra en mantenimiento. Intente más tarde."
MAINTENANCE_ALLOWED_IPS="127.0.0.1,::1"

# Configuración de API
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600

# Configuración de notificaciones SMS (opcional)
SMS_ENABLED=false
SMS_PROVIDER=
SMS_API_KEY=

# Sistema ID
SIS_ID=3